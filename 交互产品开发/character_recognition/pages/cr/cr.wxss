.cr_content{
  position: relative;
}

.result{
  height: 60%;
  width: 100%;
  margin-top: 20rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
  background-color: rgba(118, 118, 118, 0.9);
}

.scroll-container{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  display: flex;
  align-items: center;
}

.scroll-text{
  height: 750rpx;
  width: auto;
}

.text-container{
  display: inline-block;
  word-break: break-all;
}

.text_data text{
  font-size: medium;
  color: #ffffff;
}

.text_words{
  margin-top: 20rpx;
  font-weight: 200;
  font-size: medium;
}

.copy{
  font-weight: normal;
  font-size: larger;
  color: #E5B5FD;
  display: flex;
  margin-left: 70%;
  margin-top: 1%;
}

.copy_button{
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 60rpx;
  z-index: 3;
}

.copy_text{
  font-weight: normal;
  z-index: 4;
}